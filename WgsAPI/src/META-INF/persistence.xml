<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="WgsPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:/jdbc/WgsDS</jta-data-source>
    <class>org.wgs.core.GroupAction</class>
    <class>org.wgs.core.Application</class>
    <class>org.wgs.core.Role</class>
    <class>org.wgs.core.Group</class>
    <class>org.wgs.core.Member</class>
    <class>org.wgs.core.LeaderBoard</class>
    <class>org.wgs.core.Score</class>
    <class>org.wgs.entity.User</class>
    <class>org.wgs.entity.OpenIdConnectProvider</class>
    <class>org.wgs.entity.OpenIdConnectClient</class>
    <class>org.wgs.wamp.topic.WampTopic</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>      
    </properties>
  </persistence-unit>
</persistence>
